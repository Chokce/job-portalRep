rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Jobs collection rules
    match /jobs/{jobId} {
      // Allow read access to everyone
      allow read: if true;
      
      // Only authenticated users can create jobs
      allow create: if request.auth != null;
      
      // Only the job poster can update or delete their job
      allow update, delete: if 
        request.auth != null && 
        request.auth.uid == resource.data.postedBy;
    }
    
    // Users collection rules
    match /users/{userId} {
      // Users can read their own data
      allow read: if request.auth.uid == userId;
      
      // Users can create their own profile
      allow create: if request.auth.uid == userId;
      
      // Users can update their own profile
      allow update: if request.auth.uid == userId;
    }
    
    // Applications collection rules
    match /applications/{applicationId} {
      // Users can read applications they've submitted
      allow read: if 
        request.auth.uid == resource.data.applicantId ||
        request.auth.uid == get(/databases/$(database)/documents/jobs/$(resource.data.jobId)).data.postedBy;
      
      // Users can create applications
      allow create: if 
        request.auth != null &&
        request.auth.uid == request.resource.data.applicantId;
    }
  }
}
